# Gateway Environment Configuration
# Copy this file to .env and fill in the values.

# Server
PORT=8080

# Upstream services
CORE_SERVICE_URL=https://api.huuhoang.id.vn
AUTH_SERVICE_URL=http://localhost:8083
AI_SERVICE_URL=http://localhost:8082

# Log verbosity: debug | info | warn | error
LOG_LEVEL=info

# Redis â€” use redis://redis:6379/0 when running via docker compose
REDIS_URL=redis://localhost:6379/0

# Rate limiting (requests per second per IP, plus burst capacity)
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=20

# Cache TTL for GET responses, in seconds
CACHE_TTL=60
